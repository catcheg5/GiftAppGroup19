<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolour"
    tools:context=".MainActivity">


    <Switch
        android:id="@+id/darkmode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:checked="false"
        android:background="?attr/backgroundcolour"
        android:text="D/L"
        android:textColor="?attr/textcolour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:checked="false" />

    <TextView
        android:id="@+id/trendingText"
        android:layout_width="108dp"
        android:layout_height="37dp"
        android:text="Trending"
        android:textColor="?attr/textcolour"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="333dp"
        android:layout_marginBottom="47dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="335dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ca1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Cat1"
                android:textColor="?attr/textcolour" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_weight="1"

                app:srcCompat="@drawable/gift"
                tools:srcCompat="@drawable/gift" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="?attr/backgroundcolour"
                app:srcCompat="@drawable/gift"
                tools:srcCompat="@drawable/gift" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="335dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ca2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cat2"
                android:textColor="?attr/textcolour" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gift"
                tools:srcCompat="@drawable/gift" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gift"
                tools:srcCompat="@drawable/gift" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="335dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ca3"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cat3"
                android:textColor="?attr/textcolour" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gift"
                tools:srcCompat="@drawable/gift" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gift"
                tools:srcCompat="@drawable/gift" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="136dp"
        android:layout_marginBottom="116dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.57"
        app:srcCompat="@drawable/cd39970a881e12cc55244b5ab19d62c1"
        tools:srcCompat="@drawable/cd39970a881e12cc55244b5ab19d62c1" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personalise my gift"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />
</androidx.constraintlayout.widget.ConstraintLayout>